<%- include('includes/header.ejs') %>
 <main>
    <div class="receipt">
        <h1>Receipt</h1>
        <table>
            <th>Name</th>
                <td><%= name %></td>
            <tr>
            <th>Address</th>    
                <td><%= address %></td>
            </tr> 
            <tr> 
            <th>City</th>
                <td><%= city %></td>
            </tr>
            <tr>
            <th>Province</th>
                <td><%= province %></td>
            </tr>
            <tr>
            <th>Phone</th>
                <td><%= phone %></td>
            </tr>
            <tr>
            <th>Email</th>
                <td><%= email %></td>
            </tr>
        </table><br>
        <table class="products">
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>UCost</th>
                <th>Cost</th>
            </tr>
            <%
            for (var index in productsQty){
                if (productsQty[index] != undefined && productsQty[index] > 0){
                    %>
            <tr>
                <td><%= productsNames[index] %></td>
                <td><%= productsQty[index] %></td>
                <td>$<%= productsUnitcost[index] %></td>
                <td>$<%= productsSubtotal[index] %></td>
            </tr>
            <%
                }
            }
            %>
        </table><br>
         <table>
            <tr>
            <th>Subtotal</th>
                <td>$<%= subtotal %></td>
            </tr>
            <tr>
            <th>Province Tax</th>
                <td>$<%= provinceTax %></td>
            </tr>
            <tr>
            <th>Total</th>
                <td>$<%= total %></td>
            </tr>
         </table><br>
    </div>
 </main>
 <%- include('includes/footer.ejs') %>
  